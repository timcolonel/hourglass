<!DOCTYPE html>
<html>
<head>
  <title>Hourglass</title>

  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,700' rel='stylesheet' type='text/css'>

  <script>
      var current_user = <%= user_signed_in? ? current_user.id : -1 %>;
  </script>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="wrapper">
  <% hide_sidebar ||= false %>
  <% unless hide_sidebar %>
      <%= render 'layouts/sidebar' %>
  <% end %>
  <div id='content' class="content <%= 'no-sidebar' if hide_sidebar %>">
    <%= react_component('Notifications') %>
    <%= yield %>
  </div>
</div>
</body>
</html>
